.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-sizing: border-box;
  height:100vh;
  width: 750rpx;
  background-image: url("https://i.pinimg.com/736x/de/a5/55/dea5551a58c21c1c87c711f01520daac.jpg");
  background-size: 100% 100%;
  -moz-background-size:100% 100%;
}

button{
  margin-top: 30rpx;
  border-radius: 20%;
  background-color: turquoise;
}

.h1{
  margin-top: 200rpx;
  font-size: x-large;
  font-weight: bold;
  font-family: Arial, Helvetica, sans-serif;
}

.p{
  margin-top: 50rpx;
}

.avatar{
  border-radius: 50%;
  width: 200rpx;
  height:200rpx;
  margin-top: 30rpx;
}
.authBtn{
  top:40%;
  background-color: rgb(120, 238, 120);
}

.header{
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  height:300rpx;
  width: 750rpx;
  background-image: url("https://media.istockphoto.com/videos/health-care-icon-pattern-medical-innovation-concept-background-video-id1139247059?s=640x640");
}